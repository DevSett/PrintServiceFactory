package web.app.servlets;

import org.slf4j.LoggerFactory;
import web.app.models.Types;
import web.autorisation.enums.Page;
import web.autorisation.services.Sessions;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;

/**
 * Создал Сергей Либединский
 * libedinsky@atb.su
 * Дата создания: 31.07.2017
 **/
@WebServlet("/main")
public class MainServlet extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse resp) {
        try {
            String access = Sessions.getAccess(req.getRemoteAddr());
            Object[] objects = Types.getListTypes(access);
            req.setAttribute("perm", objects.length + " уровень доступа");
            req.setAttribute("types", objects);
            req.getRequestDispatcher(Page.MAIN.loadLink).forward(req, resp);

        } catch (ServletException | IOException e) {
            LoggerFactory.getLogger(MainServlet.class).error(e.getMessage(), e);
        }
    }

}
